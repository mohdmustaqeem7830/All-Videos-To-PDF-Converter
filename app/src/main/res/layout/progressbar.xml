<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationconversion"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/card"
                app:layout_constraintStart_toStartOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/wait"
                tools:ignore="MissingConstraints,NotSibling" />
            <ProgressBar
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:visibility="gone"
                style="?android:attr/progressBarStyle"
                android:layout_marginRight="10dp"
                android:id="@+id/progressbar"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/custometext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="It will take some time Let's take a coffee break Don't press back or exit button"
                    android:textSize="18sp"
                    />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationwait"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/card"
                    app:layout_constraintStart_toStartOf="@+id/card"
                    app:layout_constraintEnd_toEndOf="@+id/card"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/conversion"
                    tools:ignore="MissingConstraints,NotSibling" />
            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>